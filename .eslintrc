{
  "extends": ["airbnb", "prettier"],
  "env": {
    "amd": true,
    "browser": true,
    "jquery": true
  },
  "globals": {
    "hacker_text_config": true,
    "describe": true,
    "it": true,
    "sinon": true,
    "expect": true,
    "beforeEach": true,
    "define": true
  },
  "rules": {
    "no-console": 0,
    "global-require": "off",
    "import/no-dynamic-require": "off",
    "import/no-amd": "off",
    "class-methods-use-this": "off"
  }
}
